@* Components/TrackerWidgets/Alert.razor *@
<div class="@GetClass()" role="alert">
    <i class="@GetIcon()"></i>
    @Message
</div>

@code {
    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public string Type { get; set; } = "info";

    private string GetClass() => Type switch
    {
        "success" => "bg-green-100 text-green-800 border border-green-300 p-2 mb-5 rounded-lg flex gap-2 items-center text-sm",
        "error" => "bg-red-100   text-red-800   border border-red-300 p-2 mb-5 rounded-lg flex gap-2 items-center text-sm",
        _ => "bg-blue-100  text-blue-800  border border-blue-300 p-2 mb-5 rounded-lg flex gap-2 items-center text-sm",
    };

    private string GetIcon() => Type switch
    {
        "success" => "fas fa-check-circle",
        "error" => "fas fa-times-circle",
        _ => "fas fa-info-circle",
    };
}
